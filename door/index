    <script>
        // 创建浮动白点
        function createDots() {
            const dotsContainer = document.getElementById('dots-container');
            const dotsCount = 40;
            
            for (let i = 0; i < dotsCount; i++) {
                const dot = document.createElement('div');
                dot.classList.add('dot');
                
                // 随机位置
                const posX = Math.random() * 100;
                const posY = Math.random() * 100;
                
                // 随机动画延迟和持续时间
                const delay = Math.random() * 5;
                const duration = 15 + Math.random() * 15;
                
                dot.style.left = `${posX}vw`;
                dot.style.top = `${posY}vh`;
                dot.style.animationDelay = `${delay}s`;
                dot.style.animationDuration = `${duration}s`;
                
                dotsContainer.appendChild(dot);
            }
        }
        
        // 图标点击事件
        document.getElementById('sakura-icon').addEventListener('click', function() {
            window.open('https://amber2713.github.io/Sakura-Avenue/sakura/', '_blank');
        });
        
        document.getElementById('map-icon').addEventListener('click', function() {
            window.open('https://jovial-naiad-a3ecb6.netlify.app', '_blank');
        });
        
        document.getElementById('graduate-icon').addEventListener('click', function() {
            const videoContainer = document.getElementById('video-container');
            videoContainer.classList.add('active');
            
            // 播放视频
            const video = document.getElementById('graduate-video');
            video.play();
        });
        
        // 关闭视频
        document.getElementById('close-video').addEventListener('click', function() {
            const videoContainer = document.getElementById('video-container');
            videoContainer.classList.remove('active');
            
            // 暂停视频
            const video = document.getElementById('graduate-video');
            video.pause();
            
            // 显示消息
            const messageBox = document.getElementById('message-box');
            messageBox.classList.add('active');
            
            // 5秒后隐藏消息
            setTimeout(function() {
                messageBox.classList.remove('active');
            }, 8000);
        });
        
        // 初始化页面
        window.onload = function() {
            createDots();
        };
    </script>
</body>
