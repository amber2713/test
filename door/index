    <script>
        // Create floating white dots
        function createDots() {
            const numDots = 20;
            const container = document.body;
            
            for (let i = 0; i < numDots; i++) {
                const dot = document.createElement('div');
                dot.classList.add('dots');
                
                // Random initial position
                const x = Math.random() * 100;
                const y = Math.random() * 100;
                
                dot.style.left = `${x}%`;
                dot.style.top = `${y}%`;
                
                // Random size
                const size = 2 + Math.random() * 6;
                dot.style.width = `${size}px`;
                dot.style.height = `${size}px`;
                
                // Add animation
                const duration = 15 + Math.random() * 25;
                const delay = Math.random() * 10;
                
                dot.style.animation = `float${i} ${duration}s ease-in-out ${delay}s infinite`;
                
                container.appendChild(dot);
                
                // Add keyframes
                const styleSheet = document.styleSheets[0];
                const keyframes = `
                    @keyframes float${i} {
                        0%, 100% {
                            transform: translate(0, 0);
                        }
                        25% {
                            transform: translate(${(Math.random() - 0.5) * 100}px, ${(Math.random() - 0.5) * 100}px);
                        }
                        50% {
                            transform: translate(${(Math.random() - 0.5) * 100}px, ${(Math.random() - 0.5) * 100}px);
                        }
                        75% {
                            transform: translate(${(Math.random() - 0.5) * 100}px, ${(Math.random() - 0.5) * 100}px);
                        }
                    }
                `;
                
                styleSheet.insertRule(keyframes, styleSheet.cssRules.length);
            }
        }
        
        // Video playback functionality
        document.getElementById('graduation-icon').addEventListener('click', function(e) {
            const videoContainer = document.getElementById('video-container');
            const video = document.getElementById('graduation-video');
            const rect = this.getBoundingClientRect();
            
            // Set starting position
            const centerX = window.innerWidth / 2;
            const centerY = window.innerHeight / 2;
            
            const offsetX = centerX - (rect.left + rect.width/2);
            const offsetY = centerY - (rect.top + rect.height/2);
            
            // Initial state
            videoContainer.style.opacity = '0';
            videoContainer.style.transform = `translate(${offsetX}px, ${offsetY}px) scale(0.1)`;
            videoContainer.style.display = 'flex';
            
            // Trigger reflow
            void videoContainer.offsetWidth;
            
            // Animate to final state
            videoContainer.style.transition = 'opacity 0.8s, transform 0.8s';
            videoContainer.style.opacity = '1';
            videoContainer.style.transform = 'translate(0, 0) scale(1)';
            
            // Reset and play video
            video.currentTime = 0;
            video.play();
        });
        
        document.getElementById('close-video').addEventListener('click', function() {
            const videoContainer = document.getElementById('video-container');
            const video = document.getElementById('graduation-video');
            const messageBox = document.getElementById('message-box');
            
            video.pause();
            videoContainer.style.transition = 'opacity 0.5s, transform 0.5s';
            videoContainer.style.opacity = '0';
            
            // Hide after animation completes
            setTimeout(() => {
                videoContainer.style.display = 'none';
                // Show message box
                messageBox.classList.add('active');
            }, 500);
        });
        
        // Close message box when clicking outside
        document.getElementById('message-box').addEventListener('click', function(e) {
            if (e.target === this) {
                this.classList.remove('active');
            }
        });
        
        // Sakura click event
        document.getElementById('sakura').addEventListener('click', function() {
            window.location.href = 'https://amber2713.github.io/Sakura-Avenue/sakura/';
        });
        
        // Map icon click event
        document.getElementById('map-icon').addEventListener('click', function() {
            window.location.href = 'https://jovial-naiad-a3ecb6.netlify.app';
        });
        
        // Initialize on load
        window.addEventListener('load', function() {
            createDots();
        });
    </script>
</body>
